<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label 'E-mail' %>
      <%= f.email_field :email, class: 'form-control' %><br />

      <%= f.label 'Senha' %>
      <%= f.password_field :password, class: 'form-control' %><br />

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
